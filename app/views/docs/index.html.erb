<% unless @docs.blank? %>
  <% @docs.each do |doc| %>
     <h2><%= link_to doc.title, doc %></h2>
     <p><%= truncate(doc.content, length:50) %></p>
     <p class="text-muted"><%= time_ago_in_words(doc.created_at)%></p>
  <% end %>
<% else %>
  <h2>You have no documents</h2>
  <%= link_to "Create Doc", new_doc_path %>
<% end %>

